{
    "wp_rest_api_huiyan": {
        "version": "1.0.0",
        "api": {
            "base_path": "/wp-json",
            "namespace": "wp-rest-api-huiyan/v1",
            "timeout": 30
        },
        "cache": {
            "enabled": true,
            "ttl": 3600,
            "directory": "wp-content/themes/wordpress-api-theme/cache",
            "max_size": "50MB",
            "compression": true
        },
        "jwt": {
            "enabled": false,
            "secret_key": "your_secure_jwt_secret_key_here",
            "algorithm": "HS256",
            "token_lifetime": 86400,
            "refresh_token_lifetime": 604800
        },
        "cors": {
            "enabled": true,
            "origins": "*",
            "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "allowed_headers": ["Authorization", "Content-Type", "Accept"],
            "allow_credentials": false,
            "max_age": 86400
        },
        "security": {
            "disable_xmlrpc": true,
            "remove_generator": true,
            "restrict_access": true,
            "rate_limiting": {
                "enabled": false,
                "max_requests": 100,
                "window_seconds": 3600
            },
            "login_attempts": {
                "enabled": true,
                "max_attempts": 5,
                "lockout_time": 300
            }
        },
        "endpoints": {
            "status": {
                "enabled": true
            },
            "system_info": {
                "enabled": true,
                "requires_auth": true
            },
            "cache_control": {
                "enabled": true,
                "requires_auth": true
            }
        },
        "debug": {
            "enabled": false,
            "log_level": "error",
            "log_file": "wp-content/themes/wordpress-api-theme/logs/api-debug.log"
        }
    }
}
